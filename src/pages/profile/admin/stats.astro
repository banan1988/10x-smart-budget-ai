---
import Layout from "../../../layouts/Layout.astro";
import AiStatsView from "../../../components/AiStatsView";
import { AppHeader } from "../../../components/AppHeader";
import { AppFooter } from "../../../components/AppFooter";
import { AppSidebar } from "../../../components/AppSidebar";
import { MobileNav } from "../../../components/MobileNav";
import { Breadcrumbs } from "../../../components/Breadcrumbs";

const pageTitle = "Statystyki AI Kategoryzacji";
const pageDescription = "Panel administratora - Monitorowanie efektywności automatycznej kategoryzacji wydatków";
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="flex min-h-screen">
    <div class="hidden lg:block">
      <AppSidebar currentPage="admin-stats" userRole={Astro.locals.user?.role} client:load />
    </div>

    <div class="flex flex-1 flex-col transition-all duration-300" id="main-content">
      <AppHeader
        currentPage="dashboard"
        userEmail={Astro.locals.user?.email}
        userNickname={Astro.locals.user?.nickname}
        userRole={Astro.locals.user?.role}
        client:load
      />

      <main class="flex-1 bg-background pb-16 lg:pb-0">
        <div class="container mx-auto px-4 py-8">
          <div class="mb-6">
            <Breadcrumbs
              items={[
                { label: "Profil", href: "/profile" },
                { label: "Panel Administratora", href: "#" },
                { label: "Statystyki AI", href: "#" },
              ]}
              showSidebarToggle={true}
            />
          </div>

          <AiStatsView client:load />
        </div>
      </main>

      <AppFooter client:load />
    </div>

    <MobileNav currentPage="profile" client:load />
  </div>
</Layout>
